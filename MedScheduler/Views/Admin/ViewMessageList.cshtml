@model IEnumerable<MedScheduler.Models.Contact>

@{
    ViewBag.Title = "ViewMessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["DeleteMessagelistSuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Success:@TempData["DeleteMessagelistSuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}

<h2 class="m-4">View messagelist</h2>

<table class="table table-dark">
    <tr>
        <th class="text-secondary fs-4 fw-bolder">
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th class="text-secondary fs-4 fw-bolder">
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th class="text-secondary fs-4 fw-bolder">
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th class="text-secondary fs-4 fw-bolder">
            @Html.DisplayNameFor(model => model.Message)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>

                @Html.ActionLink("Delete", "DeleteMessageList", new { id = item.Id })
            </td>
        </tr>
    }

</table>
