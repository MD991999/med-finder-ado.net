@model MedScheduler.Models.DoctorSignUp

@{
    ViewBag.Title = "ViewProfieDoctor";
    Layout = "~/Views/Shared/_DoctorLayoutPage.cshtml";
}
<link href="~/Content/Stylesheet/Patientscontoller.css" rel="stylesheet" />
<link href="~/Content/Stylesheet/DoctorController.css" rel="stylesheet" />
<h2 class="text-center text-danger">Profile details</h2>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

@if (TempData["DPasswordUpdateSuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Information:  @TempData["DPasswordUpdateSuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
else if (TempData["DPasswordUpdateSuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Success:@TempData["DPasswordUpdateSuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
else if (TempData["DoctorUpdationSuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Success:@TempData["DoctorUpdationSuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
else if (TempData["DPasswordUpdateErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex justify-content-between">
        <strong>Error:@TempData["DPasswordUpdateErrorMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}




<div>
    <h4></h4>
    <hr />

    <div class="row">
        <div class="col-4 doctor-view-option-left">
            <dl class="dl-horizontal">
