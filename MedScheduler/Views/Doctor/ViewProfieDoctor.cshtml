            <p>


                <button class="btn btn-warning text-decoration-none text-dark fw-bold">


                    @Html.ActionLink("Edit", "Edit", "Doctor", new { id = Model.Id }, new { @class = "nav-link" })
                </button>

                <button class="btn btn-danger text-decoration-none text-dark fw-bold">

                    @Html.ActionLink("Delete", "Delete", "Doctor", new { id = Model.Id }, new { @class = "nav-link" })
                </button>

