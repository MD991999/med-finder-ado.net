@model MedScheduler.Models.Contact

@{
    ViewBag.Title = "AddConcern";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
<link href="~/Content/Stylesheet/contact.css" rel="stylesheet" />

@if (TempData["AddConcernErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex justify-content-between">
        <strong>Information:  @TempData["AddConcernErrorMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
else if (TempData["AddConcernSuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Success:@TempData["AddConcernSuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="conatact">
        <div class="row w-100 first-parent-div">
            <div class="main-div-half1 col-6"></div>
            <div class="main-div-half2 col-6 "></div>
        </div>
        <div class="row second-parent-div">
            <div class="col-2"></div>
            <div class="contact-form-details col-8 bg-light ">
                <div class="message-div ">
                    <h4 class="fw-bolder text-success fs-2">Send a message</h4>
                    <!-- full name -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 fw-bolder fs-5" })
                        <div class="col-md-10">
                            <div> @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "" } })</div>
                            <div> @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger fw-bold" })</div>
                        </div>
                    </div>
                    <!-- email -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 fw-bolder fs-5" })
                        <div class="col-md-10 d-flex flex-column">
                            <div>@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "" } })</div>
                            <div>@Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger  fw-bold" })</div>
                        </div>
                    </div>
                    <!-- mobile -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2 fw-bolder fs-5" })
                        <div class="col-md-10 d-flex flex-column">
                            <div>   @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "" } })</div>
                            <div>@Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger fw-bold" })</div>
                        </div>
                    </div>
                    <!-- message -->
                    <div class="form-group">
                        @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2 fw-bolder fs-5" })
                        <div class="col-md-10 d-flex flex-column">
                            <div>  @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "" } })</div>
                            <div> @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger  fw-bold" })</div>
                        </div>
                    </div>
                    <div class="form-group d-flex flex-row">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Send" class="btn border-3 border-primary mt-1 fs-5 fw-bold text-danger" />
                        </div>
                        <div class="mt-3">
                            @Html.ActionLink("Back", "Index")
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
        <div class="row last-session">
            <div class="m-3">
                <h3 class="text-center fs-3 fw-bolder">Contact info</h3>
                <div class="d-flex flex-row justify-content-between m-4">
                    <div><i class="fa-solid fa-location-dot fa-2xl"></i><strong>:</strong></div>
                    <div class="d-flex flex-column">
                        <h5 class="fw-bold">Gold tower</h5>
                        <h5 class="fw-bold">Kakkanad</h5>
                        <h5 class="fw-bold">Wayanad</h5>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-between m-4">
                    <div><i class="fa-solid fa-phone fa-2xl"></i><strong>:</strong></div>
                    <div class="d-flex flex-column">
                        <h5 class="fw-bold">7306946106</h5>
                    </div>
                </div>

                <div class="d-flex flex-row justify-content-between m-4">
                    <div><i class="fa-solid fa-envelope fa-2xl"></i><strong>:</strong></div>
                    <div class="d-flex flex-column">
                        <h5 class="fw-bold">d@gmail.com</h5>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-between m-4">
                    <div> <i class="fa-brands fa-square-whatsapp fa-2xl"></i><strong>:</strong></div>
                    <div class="d-flex flex-column">
                        <h5 class="fw-bold">8078314311</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


