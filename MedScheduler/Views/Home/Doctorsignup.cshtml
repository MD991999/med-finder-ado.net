                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Tuesday, "", new { @class = "text-danger fs-5 " })
            </div>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Wednesday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Wednesday" name="Wednesday" required>
                    <option value="" disabled selected>Select from the dropdown</option>
                    <option value="10:00am-12:00pm">10:00am-12:00pm</option>
                    <option value="13:00pm-16:00pm">13:00pm-16:00pm</option>
                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Wednesday, "", new { @class = "text-danger fs-5 " })
            </div>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Thursday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Thursday" name="Thursday" required>
                    <option value="" disabled selected>Select from the dropdown</option>
                    <option value="10:00am-12:00pm">10:00am-12:00pm</option>
                    <option value="13:00pm-16:00pm">13:00pm-16:00pm</option>
                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Thursday, "", new { @class = "text-danger fs-5 " })
            </div>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Friday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Friday" name="Friday" required>
                    <option value="" disabled selected>Select from the dropdown</option>
                    <option value="10:00am-12:00pm">10:00am-12:00pm</option>
                    <option value="13:00pm-16:00pm">13:00pm-16:00pm</option>
                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Friday, "", new { @class = "text-danger fs-5 " })
            </div>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Saturday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Saturday" name="Saturday" required>
                    <option value="" disabled selected>Select from the dropdown</option>
                    <option value="10:00am-12:00pm">10:00am-12:00pm</option>
                    <option value="13:00pm-16:00pm">13:00pm-16:00pm</option>
                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Saturday, "", new { @class = "text-danger fs-5 " })
            </div>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Sunday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Sunday" name="Sunday" required>
                    <option value="" disabled selected>Select from the dropdown</option>
                    <option value="10:00am-12:00pm">10:00am-12:00pm</option>
                    <option value="13:00pm-16:00pm">13:00pm-16:00pm</option>
                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Sunday, "", new { @class = "text-danger fs-5 " })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Sign up" class="btn btn-success mt-3" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
}
