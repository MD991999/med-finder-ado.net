@model MedScheduler.Models.DoctorSignUp

@{
    ViewBag.Title = "Doctorsignup";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}
<script src="~/Scripts/Javascript/Doctorsignup.js"></script>
<link href="~/Content/Stylesheet/Doctorsignup.css" rel="stylesheet" />

@using (Html.BeginForm("DoctorSignUp", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Sign up</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            @*firstname*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Firstname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
            @*secondname*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Lastname, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Lastname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
        </div>
        <div class="row">
            @*Age*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Age, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control", min = "0" } })
                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
            @*gender*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.RadioButtonFor(model => model.Gender, "Male", new { id = "GenderMale" }) Male
                    @Html.RadioButtonFor(model => model.Gender, "Female", new { id = "GenderFemale" }) Female
                </div>
                @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger fs-5 " })

            </div>
        </div>
        <div class="row">
            @*phonenumber*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Phonenumber, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Phonenumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phonenumber, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
            @*email*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger fs-5" })
                </div>
            </div>
        </div>
        <div class="row">
            @*workspace*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Workspace, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Workspace, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Workspace, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
            @*specialisation*@
            <div class="d-flex flex-column col-6 mt-2">
                <label for="" class="fs-5 fw-bold">Select your specialization from the drop down</label>
                <Select required id="specialisation" onfocusout="validateDropdownState()" name="Specialisation">
                    <option class="option" value="" selected disabled>Select specialisation</option>
                    <option class="option" value="Cardiology">Cardiology</option>
                    <option class="option" value="Dermatology">Dermatology</option>
                    <option class="option" value="Endocrinology">Endocrinology</option>
                    <option class="option" value="Gastroenterology">Gastroenterology</option>
                    <option class="option" value="Neurology">Neurology</option>
                    <option class="option" value="Obstetrics and Gynecology">Obstetrics and gynecology</option>
                    <option class="option" value="Orthopedics">Orthopedics</option>
                    <option class="option" value="Pediatrics">Pediatrics</option>
                    <option class="option" value="Psychiatry">Psychiatry</option>
                    <option class="option" value="Surgeon">Surgeon</option>
                </Select>
                <div id="alert-msg" class="validateDropdownError text-danger  fs-5"></div>
                @Html.ValidationMessageFor(model => model.Specialisation, "", new { @class = "text-danger fs-5 " })

            </div>
        </div>
        @*experience*@
        <div class="row">
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Experience, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control", min = "0" } })
                    @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
            @*username*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
        </div>
        <div class="row">
            @*password*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
            @*confirm password*@
            <div class="form-group col-6 mt-2">
                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger fs-5 " })
                </div>
            </div>
        </div>
        @*profilephoto*@
        <div class="form-group mt-2">
            @Html.LabelFor(model => model.Profilephoto, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" class="form-control-file" required />
                @Html.ValidationMessageFor(model => model.Profilephoto, "", new { @class = "text-danger fs-5 " })
            </div>
        </div>
        <div class="border-2 border border-danger w-50 m-3">
            <h3 class="center text-primary">Time slots</h3>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Monday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Monday" name="Monday" required>
                    <option value="" disabled selected>Select from the dropdown</option>
                    <option value="10:00am-12:00pm">10:00am-12:00pm</option>
                    <option value="13:00pm-16:00pm">13:00pm-16:00pm</option>
                    <option value="18:00pm-22:00pm">18:00pm-22:00pm</option>
                    <option value="00:00am-04:00am">00:00am-04:00am</option>
                    <option value="06:00am-09:00am">06:00am-09:00am</option>
                </select>
                @Html.ValidationMessageFor(model => model.Monday, "", new { @class = "text-danger fs-5 " })
            </div>
            <div class="d-flex p-3">
                @Html.LabelFor(model => model.Tuesday, htmlAttributes: new { @class = "control-label col-md-5 fs-5 fw-bold" })
                <select id="Tuesday" name="Tuesday" required>
