@model MedScheduler.Models.SlotBooking

@{
    ViewBag.Title = "DeleteAppointment";
    Layout = "~/Views/Shared/_PatientLayoutPage.cshtml";
}
<link href="~/Content/Stylesheet/Patientscontoller.css" rel="stylesheet" />


@if (TempData["ErrorMessage"] != null)
{
    <div>@TempData["ErrorMessage"]</div>
}

<h2 class="text-danger">Delete Appointment</h2>

<div class="d-flex flex-row justify-content-between">

    <h3>Are you sure you want to delete this?</h3>
   

</div>
<div>

    <hr />
    <div class="row w-100 d-flex flex-row ">
        <div class="col-4">
            <dl class="dl-horizontal">
                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.PatientId)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.PatientId)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.DoctorId)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.DoctorId)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Firstname)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Firstname)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Lastname)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Lastname)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Age)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Gender)
                </dd>

            </dl>
        </div>
        <div class="col-4  d-flex flex-row ">
            <dl>
                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Phone)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Phone)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Message)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Message)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Doctorname)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Doctorname)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Specialisation)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Specialisation)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Date_of_appointment)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Date_of_appointment)
                </dd>

                <dt class="profile-details">
                    @Html.DisplayNameFor(model => model.Time_of_appointment)
                </dt>

                <dd class="profile-details-value">
                    @Html.DisplayFor(model => model.Time_of_appointment)
                </dd>

            </dl>
        </div>

    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back ", "viewappointment", new { id = Model.PatientId })
        </div>
    }
</div>
