@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex justify-content-between">
        <strong>Information:  @TempData["ErrorMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Success:@TempData["SuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
 else if (TempData["ChangePasswordError"] != null)
{
    <div class="alert alert-danger d-flex justify-content-between">
        <strong>Information:  @TempData["ChangePasswordError"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}

@if (Session["username"] != null)
{
    // <h4 class="text-danger fs-5 fw-bold">Welcome @Session["username"].ToString();</h4>
}

@{
    var doctorsList = (List<DoctorSignUp>)Session["DoctorsList"]; // Retrieve doctorsList from session
                                                                  //the session stores objects in a generic Object type.                                 //The code snippet you provided retrieves the value stored in the session with the key "DoctorsList" and casts it to a List<DoctorSignUp> type, assigning it to the variable doctorsList.
}





@if (doctorsList != null)
{
    <div class="container card-deck row w-100">
        @foreach (var doctor in doctorsList)
        {
            <div class=" col-md-6 ">
                <div class="card  h-auto p-1 mb-4">
                    <div class="row doctor-card">
                        <div class="col-md-5 text-align-center">
                            @if (!string.IsNullOrEmpty(doctor.Profilephoto))
                            {
                                <!-- If Profilephoto is not null or empty, use the URL provided in the model -->
                                <img class="doctor-image card-img-top w-100 h-50 m-2" src="@Url.Content(doctor.Profilephoto)" alt="User Profile Photo" />
                            }
                            else
                            {
                                <!-- If Profilephoto is null or empty, show a default image using a relative path -->
                                <img class="doctor-image card-img-top w-100 h-50 m-2" src="~/Content/Pictures/icon.jpg" alt="Default Profile Photo" />
                            }
                            @* <img src="@Url.Content(doctor.Profilephoto)" class="doctor-image card-img-top w-100 h-50 m-2" alt="...">*@
                            <h5 class="card-title"><strong class="fw-bolder text-danger">Name:</strong> <span class="fw-bold">@doctor.Firstname @doctor.Lastname</span></h5>
                            <h5 class="card-title"><strong class="fw-bolder text-danger">Specialization:</strong><span class="fw-bold"> @doctor.Specialisation</span></h5>
                            <h5 class="card-title"><strong class="fw-bolder text-danger">Experience:</strong> <span class="fw-bold">@doctor.Experience years</span></h5>
                            <h5 class="card-title"><strong class="fw-bolder text-danger">Workspace:</strong> <span class="fw-bold">@doctor.Workspace</span></h5>
                        </div>
                        <div class="col-md-7">
                            <div class="card-body">

                                <table class="table">
                                    <thead>
                                        <tr class="table-primary">
                                            <th>Days</th>
                                            <th>Time alloted</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="table-secondary">
                                            <th>Monday</th>
                                            <td class="text-primary fw-bold">@doctor.Monday</td>
                                        </tr>
                                        <tr class="table-success">
                                            <th>Tuesday</th>
                                            <td class="text-primary fw-bold">@doctor.Tuesday</td>
                                        </tr>
                                        <tr class="table-danger">
                                            <th>Wednesday</th>
                                            <td class="text-primary fw-bold">@doctor.Wednesday</td>
                                        </tr>
                                        <tr class="table-info">
                                            <th>Thursday</th>
                                            <td class="text-primary fw-bold">@doctor.Thursday</td>
                                        </tr>
                                        <tr class="table-light">
                                            <th>Friday</th>
                                            <td class="text-primary fw-bold">@doctor.Friday</td>
                                        </tr>
                                        <tr class="table-primary">
                                            <th>Saturday</th>
                                            <td class="text-primary fw-bold">@doctor.Saturday</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <form method="get" action="@Url.Action("BookingDoctorPatient", "Patient")">
                                    <input type="hidden" name="Id" value="@doctor.Id">
                                    <button type="submit" class="bg-success fw-bolder fs-5 border-0">Book a slot</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>






















































