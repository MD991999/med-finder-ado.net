@model MedScheduler.Models.PatientSignUp

@{
    ViewBag.Title = "ViewProfile";
    Layout = "~/Views/Shared/_PatientLayoutPage.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link href="~/Content/Stylesheet/Patientscontoller.css" rel="stylesheet" />
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger d-flex justify-content-between">
        <strong>Information:  @TempData["ErrorMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}
else if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success d-flex justify-content-between">
        <strong>Success:@TempData["SuccessMessage"] </strong>
        <button type="button" class="btn-close" aria-label="Close" data-dismiss="alert"></button>
    </div>
}

<div class="row">
    <h1 class="text-center">Profile details</h1>
    <div class="col-4 view-profile-left">
        <dl>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Firstname)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Firstname)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Lastname)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Lastname)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Dateofbirth)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Dateofbirth)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Phonenumber)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Phonenumber)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Email)
            </dd>
        </dl>
    </div>
    <div class="col-4">
        <img class="w-100 h-100" src="~/Content/Pictures/view-profile2.jpeg" />
    </div>
    <div class="col-4 view-profile-right">
        <dl>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.State)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class="profile-details">
                @Html.DisplayNameFor(model => model.Username)
            </dt>
            <dd class="profile-details-value">
                @Html.DisplayFor(model => model.Username)
            </dd>
            <button class="bg-primary border-0" data-bs-toggle="modal" data-bs-target="#exampleModal">Change password</button>
        </dl>
    </div>
</div>


@*model *@
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form  method="post" action="@Url.Action("Changepassword", "Patient")" >
                    <div></div>
                    <label class="fs-5 fw-bolder">Username</label>
                    <input id="Username" placeholder="Username" class="form-control" name="Username"  onfocusout="UsernamechangePassword()" />
                    <div id="username-error" class="text-danger fs-5 fw-bolder" ></div>
                    <label class="fs-5 fw-bolder">Password</label>
                    <input id="Password" type="password" placeholder="Password" class="form-control" name="Password" onfocusout="PasswordchangePassword()" />
                    <div id="password-error" class="text-danger fs-5 fw-bolder"></div>
                    <label class="fs-5 fw-bolder">New password</label>
                    <input id="changePassword"  type="password" placeholder="New password" class="form-control" name="New_password"  onfocusout="NewPasswordchangePassword()"  />
                    <div id="cpassword-error" class="text-danger fs-5 fw-bolder"></div>
                    <button class="btn btn-info text-decoration-none text-dark fw-bold" id="button" >
                        Save changes
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>
<p class="m-3">
    <button class="btn btn-primary text-decoration-none text-dark fw-bold">
        @Html.ActionLink("View appointments", "viewappointment", "Patient", new { id = Model.Id }, new { @class = "nav-link fw-bolder fs-5" })
    </button>
    <button class="btn btn-warning text-decoration-none text-dark fw-bold">
        @Html.ActionLink("Edit", "Edit", "Patient", new { id = Model.Id }, new { @class = "nav-link  fw-bolder fs-5" })
    </button>
    <button class="btn btn-danger text-decoration-none text-dark fw-bold">
        @Html.ActionLink("Delete", "Delete", "Patient", new { id = Model.Id }, new { @class = "nav-link  fw-bolder fs-5" })
    </button>
    <button class="btn btn-info text-decoration-none text-dark fw-bold">
        @Html.ActionLink("Back", "Index")
    </button>
</p>
<script src="~/Scripts/Javascript/patientcontroller.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
